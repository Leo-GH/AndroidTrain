<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/home_01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:src="@drawable/home_01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="8"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/home_04"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home_04" />


        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_weight="8"
            android:gravity="bottom"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_gravity="right"
                android:layout_marginRight="75dp"
                android:layout_marginBottom="-7dp"
                android:src="@drawable/home_14" />

            <ImageView
                android:id="@+id/home_19"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:src="@drawable/home_19" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:src="@drawable/home_07" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:src="@drawable/home_10" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:src="@drawable/home_12" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:src="@drawable/home_17" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:src="@drawable/home_24" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:src="@drawable/home_29" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/home_31"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/home_31" />

</LinearLayout>

